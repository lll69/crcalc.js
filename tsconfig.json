{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ES2020",
        "declaration": true,
        "jsx": "preserve",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "removeComments": false,
        "outDir": "dist"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/node_modules/*"
    ]
}